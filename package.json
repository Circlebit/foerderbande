{
  "name": "fomo",
  "version": "0.0.1",
  "description": "funding opportunity monitor",
  "private": true,
  "scripts": {
    "dev": "concurrently -k -n docker,frontend \"pnpm dev:docker\" \"pnpm dev:frontend\"",
    "dev:docker": "docker compose -f docker/compose.yaml up",
    "dev:frontend": "pnpm --filter fomo-frontend dev",
    "dev:logs": "docker compose -f docker/compose.yaml logs -f",
    "dev:down": "docker compose -f docker/compose.yaml down",
    "dev:clean": "docker compose -f docker/compose.yaml down -v && docker volume prune -f && rm -rf docker/volumes/db/data"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
