{
  "name": "fomo",
  "version": "0.0.1",
  "description": "funding opportunity monitor",
  "private": true,
  "scripts": {
    "dev": "concurrently -k -n docker,frontend \"pnpm dev:supabase\" \"pnpm dev:frontend\"",
    "dev:supabase": "docker compose up",
    "dev:frontend": "sleep 10 && pnpm --filter fomo-frontend dev",
    "dev:frontend:docker": "docker compose --profile frontend up --build",
    "dev:full": "docker compose --profile full up --build",
    "dev:logs": "docker compose logs -f",
    "dev:down": "docker compose down",
    "dev:clean": "docker compose down -v --remove-orphans && docker volume prune -f && rm -rf ./supabase/volumes/db/data",
    "build": "pnpm --filter fomo-frontend build",
    "build:prod": "docker compose build frontend-prod",
    "test:prod": "docker compose --profile prod-test up --build",
    "start:prod": "docker compose --profile production up -d",
    "stop": "docker compose down",
    "gen:types": "npx dotenvx run -- bash -c 'npx supabase gen types typescript --db-url \"postgresql://postgres:${POSTGRES_PASSWORD}@localhost:5433/postgres\" > packages/frontend/src/types/database.ts'",
    "db:reset": "docker compose down db && docker volume rm fomo_db-config || true && docker compose up db -d",
    "logs:frontend": "docker compose logs -f frontend",
    "logs:supabase": "docker compose logs -f db rest auth meta studio kong",
    "logs:prod": "docker compose logs -f frontend-prod",
    "create-test-users": "node scripts/create-test-users.mjs"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.45.2",
    "@supabase/supabase-js": "^2.50.0",
    "concurrently": "^9.1.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
